	"dependencies": {
		"bcryptjs": "^2.4.3",
		"colors": "^1.4.0",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-async-handler": "^1.2.0",
		"mongoose": "^6.5.2"
	},
	"devDependencies": {
		"concurrently": "^7.3.0",
